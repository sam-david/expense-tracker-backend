<%= form_for @expense, url: {action: "update"} do |f| %>
  <div class="row">
      <div class="col-sm-4">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
      <div class="col-sm-4">
        <%= f.label :amount %>
        <%= f.number_field :amount, :step => 0.01 %>
      </div>
      <div class="col-sm-4">
        <%= f.datetime_local_field :transaction_date %>
      </div>
  </div>
  <div class="row">
    <div class="col-sm-12 expense-submit-row">
      <%= f.submit "Update Expense" %>
    </div>
  </div>
<% end %>
